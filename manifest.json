{

"manifest_version": 2,
"name": "Torrentboxd",
"version": "1.0",

"description": "Adds torrent search shortcuts to Letterboxd",

"icons": {
  "48": "icon.png"
},

"content_scripts": [
  {
    "matches": ["*://*.letterboxd.com/*"],
    "js": ["lbtorrent.js"]
  }
],

"options_ui": {
  "page": "options.html"
},

"permissions": ["storage"],

"browser_specific_settings": {
  "gecko": {
    "id": "{df85b502-bef7-45a0-a9b3-dbcc57927a3d}"
  }
}
  }
